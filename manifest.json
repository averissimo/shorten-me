{

  "manifest_version": 2,
  "name": "Shorten me",
  "version": "1.0.1",
  "author": "André Veríssimo",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "shorten.me.mozilla@gmail.com",
      "strict_min_version": "53.0a1"
    }
  },

  "description": "Adds a url shortener button",

  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "186": "icons/icon-186.png"
  },

  "permissions": [
    "activeTab",
    "<all_urls>",
    "clipboardWrite",
    "contextMenus",
    "notifications",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],

  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "URL Shortener"
  },

  "background": {
    "scripts": ["core.js", "background.js"]
  }
}
