{

  "manifest_version": 2,
  "name": "Shorten me",
  "version": "1.0.5",
  "author": "André Veríssimo",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "shorten.me.mozilla@gmail.com",
      "strict_min_version": "53.0a1"
    }
  },

  "description": "Adds a url shortener button and context menu for links in a page",

  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "<all_urls>",
    "tabs",
    "*://addons.mozilla.org/*",
    "contextMenus",
    "notifications",
    "storage"
  ],

  "options_ui": {
      "page": "options/options.html",
      "browser_style": true
  },

  "browser_action": {
    "default_icon": "icons/icon-128.png",
    "default_title": "URL Shortener"
  },

  "background": {
    "scripts": ["src/core.js", "src/background.js"]
  }
}
