{
  "shortenURL": {
    "message": "Shorten this link",
    "description": "Title of context menu item to shorten links."
  },

  "notificationTitle": {
    "message": "Shorten me",
    "description": "Title of context menu item to shorten links."
  },

  "notificationContent": {
    "message": "$SHORTURL$ was copied to clipboard.",
    "description": "Tells the user which link they clicked.",
    "placeholders": {
      "url" : {
        "content" : "$1",
        "example" : "https://developer.mozilla.org"
      },
      "shorturl" : {
        "content" : "$2",
        "example" : "https://developer.mozilla.org"
      }
    }
  },

  "notificationErrorGeneric": {
    "message": "Oops, something went wrong. Sorry!",
    "description": "Generic error message."
  },

  "notificationErrorNetwork": {
    "message": "Network problems when calling goo.gl service, please check your connection.",
    "description": "Network error calling goo.gl service."
  },

  "notificationErrorProtocol": {
    "message": "Current tab's url is not supported. (only http and https).\n$URL$",
    "description": "Protocol not supported, only http/https.",
    "placeholders": {
      "url" : {
        "content" : "$1",
        "example" : "https://developer.mozilla.org"
      }
    }
  },

  "notificationErrorHost": {
    "message": "Sorry, this page is restricted by browser and cannot copy to clipboard. However here is the link: $SHORTURL$",
    "description": "Clipboard copy/write fail.",
    "placeholders": {
      "msg" : {
        "content" : "$1",
        "example" : "https://developer.mozilla.org"
      },
      "url" : {
        "content" : "$2",
        "example" : "https://developer.mozilla.org"
      },
      "shorturl" : {
        "content" : "$3",
        "example" : "https://developer.mozilla.org"
      }
    }
  },

  "notificationErrorClipboard": {
    "message": "Sorry, $MSG$\nHowever the shorten link is '$SHORTURL$'",
    "description": "Clipboard copy/write fail.",
    "placeholders": {
      "msg" : {
        "content" : "$1",
        "example" : "https://developer.mozilla.org"
      },
      "url" : {
        "content" : "$2",
        "example" : "https://developer.mozilla.org"
      },
      "shorturl" : {
        "content" : "$3",
        "example" : "https://developer.mozilla.org"
      }
    }
  }
}
